<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/creamy_white"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Row for User and Opponent Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <!-- Current User Box -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@android:color/darker_gray">

            <TextView
                android:id="@+id/textViewCurrentUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Name"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewCurrentUserScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score: 0"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Opponent Box -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@android:color/darker_gray"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/textViewOpponentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opponent Name"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewOpponentScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score: 0"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Number Input Field (for score input) -->
    <EditText
        android:id="@+id/scoreInputEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Enter your score"
        android:layout_marginBottom="16dp" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/submitScoreButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Score"
        android:layout_marginTop="10dp"
        android:textSize="24sp"
        android:padding="16dp"
        android:backgroundTint="@color/dart_green"
        android:textColor="@color/creamy_white" />

</LinearLayout>