<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dart_green"
    android:padding="8dp">

    <!-- Navigation Item 1 -->
    <ImageView
        android:id="@+id/nav_item1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/home"
        android:padding="20dp"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Navigation Item 2 -->
    <ImageView
        android:id="@+id/nav_item2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/trophy"
        android:padding="20dp"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/nav_item1" />

    <!-- Navigation Item 3 -->
    <ImageView
        android:id="@+id/nav_item3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/profile"
        android:padding="20dp"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/nav_item2" />

    <!-- Navigation Item 4 -->
    <ImageView
        android:id="@+id/nav_item4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/settings"
        android:padding="20dp"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/nav_item3"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
