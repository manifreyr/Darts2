<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- Header -->
    <TextView
        android:id="@+id/summaryHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Summary"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Player Names & Scores -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/player1Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 1: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/player1Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100 "
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" | "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/player2Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 2: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/player2Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="85"
            android:textSize="18sp" />
    </LinearLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp">

        <TableRow>

            <TextView
                android:text="Username"
                android:padding="8dp"
                android:textStyle="bold" />

            <TextView
                android:text="Statistic"
                android:padding="8dp"
                android:textStyle="bold" />

            <TextView
                android:text="Username"
                android:padding="8dp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/player1_3dartAvg"
                android:text="0"
                android:padding="8dp" />

            <TextView
                android:text="3-Dart Avg"
                android:padding="8dp" />

            <TextView
                android:id="@+id/player2_3dartAvg"
                android:text="0"
                android:padding="8dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/player1_first9Avg"
                android:text="0"
                android:padding="8dp" />

            <TextView
                android:text="First 9 Avg"
                android:padding="8dp" />

            <TextView
                android:id="@+id/player2_first9Avg"
                android:text="0"
                android:padding="8dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/player1_bestLeg"
                android:text="0"
                android:padding="8dp" />

            <TextView
                android:text="Best Leg"
                android:padding="8dp" />

            <TextView
                android:id="@+id/player2_bestLeg"
                android:text="0"
                android:padding="8dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/player1_worstLeg"
                android:text="0"
                android:padding="8dp" />

            <TextView
                android:text="Worst Leg"
                android:padding="8dp" />

            <TextView
                android:id="@+id/player2_worstLeg"
                android:text="0"
                android:padding="8dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/player1_highScore"
                android:text="0"
                android:padding="8dp" />

            <TextView
                android:text="High Score"
                android:padding="8dp" />

            <TextView
                android:id="@+id/player2_highScore"
                android:text="0"
                android:padding="8dp" />
        </TableRow>
    </TableLayout>
</LinearLayout>
