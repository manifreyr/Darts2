<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- Header -->
    <TextView
        android:id="@+id/summaryHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Summary"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Player Names & Scores -->
    <TextView
        android:id="@+id/playerScores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 1: 100  |  Player 2: 85"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Game Statistics -->
    <TextView
        android:id="@+id/statisticsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Statistics"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp">

        <TableRow>
            <TextView android:text="1a" android:padding="8dp" />
            <TextView android:text="1b" android:padding="8dp" />
            <TextView android:text="1c" android:padding="8dp" />
        </TableRow>
        <TableRow>
            <TextView android:text="2a" android:padding="8dp" />
            <TextView android:text="2b" android:padding="8dp" />
            <TextView android:text="2c" android:padding="8dp" />
        </TableRow>
        <TableRow>
            <TextView android:text="3a" android:padding="8dp" />
            <TextView android:text="3b" android:padding="8dp" />
            <TextView android:text="3c" android:padding="8dp" />
        </TableRow>
        <TableRow>
            <TextView android:text="4a" android:padding="8dp" />
            <TextView android:text="4b" android:padding="8dp" />
            <TextView android:text="4c" android:padding="8dp" />
        </TableRow>
        <TableRow>
            <TextView android:text="5a" android:padding="8dp" />
            <TextView android:text="5b" android:padding="8dp" />
            <TextView android:text="5c" android:padding="8dp" />
        </TableRow>
    </TableLayout>

    <!-- Button to Return to Main Menu -->
    <Button
        android:id="@+id/btnReturnToMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return to Menu"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />
</LinearLayout>
